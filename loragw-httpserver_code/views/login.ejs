<html>

<% include _shared/htmlHeader.ejs %>

    <body>
        <% include _shared/loginPageHeader.ejs %>
            <div class="lora-gateway-dashboard-content-container-wrapper">
                <div class="well col-sm-12 col-md-6 col-lg-4 col-md-offset-4 col-lg-offset-4 lora-gateway-dashboard-content-well">
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                            <h1>Sign in</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-12 col-lg-12">
                            <form id="loginForm" class="form-horizontal" method="post" action="/api/login">

                                <div class="form-group">
                                    <label for="username" class="cols-sm-2 control-label">Username</label>
                                    <div class="cols-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-users fa" aria-hidden="true"></i>
                                            </span>
                                            <input type="text" class="form-control" name="username" id="username" placeholder="Enter your username"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="cols-sm-2 control-label">Password</label>
                                    <div class="cols-sm-10">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                                            </span>
                                            <input type="password" class="form-control" name="password" id="password" placeholder="Enter your password"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary col-sm-12 col-md-12 col-lg-12">Sign in</button>
                                </div>
                                <% if (loginFailed) { %>
                                <div class="form-group">
                                    <h4><span id="dangerText" class="text-danger"><strong>Username or password is incorrect</strong></span></h4>
                                </div>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% include _shared/footer.ejs %>
    </body>

</html>
